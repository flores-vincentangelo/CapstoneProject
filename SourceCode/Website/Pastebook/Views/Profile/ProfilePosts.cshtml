@model Models.UserModel


<!DOCTYPE html>
    <html>
        <head>
            <link rel="stylesheet" type="text/css" href="./Styles/Profiles/ProfilePost.css">
            <script src="./Scripts/ProfilePost.js"></script>
        </head>
        <body>
            <div class = "profile-post-container">
                <div class = "profile-post-container-status">
                    <div class = "profile-post-container-status-user">
                        <div class = "profile-post-container-status-user1">
                            <img id = "user-photo" src=@Model.Photo>
                            <form class = "status-edit">
                                <input type="text" id="status" name="status" placeholder="What's on your mind?">
                            </form>
                        </div>
                        <div class = "user-upload">
                            <a href>Photo</a>
                        </div>
                    </div>
                    <div class = "profile-post-container-status-label">
                        <p id = "label">Posts</p>
                    </div>
                    <div class = "profile-post-container-status-post">
                        <div class ="profile-post-container-status-post-profile">
                            <img class = "user-photo" src=@Model.Photo>
                            <span id ="user-details">@Model.FirstName @Model.LastName <br> Insert Date Here</span>
                        </div>
                        <div class ="profile-post-container-status-post-caption">
                            <span>Insert caption here</span>
                        </div>
                        <div class = "profile-post-container-status-post-status">
                            <span id = "like">Likes</span>
                            <span id = "comment">Comments</span>
                        </div>
                        <div class = "profile-post-container-status-post-buttons">
                            <button>Like</button>
                            <button>Comments</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class = "modal-container">
                <div class = "modal-container-title">
                    <span id = "modal-container-close">&times;</span>
                    <h1>Create Post</h1>
                </div>
                <div class = "modal-container-user">
                    <img class = "user-photo" src=@Model.Photo>
                    <p id ="user-details">@Model.FirstName @Model.LastName</p>
                </div>
                <div class = "modal-container-caption">
                    <form class = "caption-add" id = "caption-add">
                        <input type="text" id = "caption" name="caption" placeholder="What's on your mind?" maxlength="1000">
                        <button class = "user-post-button" type = "submit">Post</button>
                    </form>
                </div>
                <div class = "modal-container-addToPost">
                    <span id = "user-addToPost">Add to your post</span>
                    <a href="#" id = "user-addToPost-photo">Img</a>
                </div>
                @* <div class = "modal-container-button">
                    <button class = "user-post-button">Post</button>
                </div> *@
            </div>
        </body>
    </html>
    
