            <span id="profile-close-modal">&times;</span>
            <h2 class="profile-title-modal">Edit Information</h2>
            <hr>
            <form class="form-edit" id="form-profile">
                <label>First Name:</label>
                <input type="text" id="first-name" name="FirstName" value="@Model.FirstName" /><br><br>
                <label>Last Name:</label>
                <input type="text" id="last-name" name="FirstName" value="@Model.LastName" /><br><br>
                <label>Mobile Number:</label>
                <input type="text" id="mobile-number" name="MobileNumber" value="@Model.MobileNumber" /><br><br>
                <label>Birthday:</label>
                <input type="date" id="birthday" name="Birthday" value="@Model.Birthday" /><br><br>
                <label>Gender:</label>
                <input type="text" id="gender" name="Gender" value="@Model.Gender" />
            </form>
            <button class="profile-btn" id="save-btn">Save</button>
            <button class="profile-btn" id="cancel-btn">Cancel</button>
        </div>
    </div>
        
