@{Layout = "/Views/_Layout.cshtml";}
@model Models.FriendsModel

<link rel="stylesheet" href="./Styles/Friends/Friends.css">
<script src="Scripts/Friends.js"></script>

<div class="friends">
    <div class="friends-sidepanel">
        <div class="friends-sidepanel-title">Friends</div>
        <a class="friends-sidepanel-link" href="/friends"><img class="friends-sidepanel-link-icon" src="Images/Friends/icon.png">Home</a>
        <a class="friends-sidepanel-link" href="/friends"><img class="friends-sidepanel-link-icon" src="Images/Friends/icon.png">Friend Requests</a>
        <a class="friends-sidepanel-link" href="/friends"><img class="friends-sidepanel-link-icon" src="Images/Friends/icon.png">Suggestions</a>
        <a class="friends-sidepanel-link" href="/friends"><img class="friends-sidepanel-link-icon" src="Images/Friends/icon.png">All Friends</a>
        <a class="friends-sidepanel-link" href="/friends"><img class="friends-sidepanel-link-icon" src="Images/Friends/icon.png">Birthdays</a>
        <a class="friends-sidepanel-link" href="/friends"><img class="friends-sidepanel-link-icon" src="Images/Friends/icon.png">Custom Lists</a>
    </div>
    <div class="friends-main">
        <div class="friends-main-title">Friend Requests</div>
        <div class="friends-main-friendcardcontainer">
            @{
                if(Model.FriendRequestObjList == null)
                {
                    <div>No Friend Requests</div>
                }
                else
                {
                    for(var i = 1; i <= 40; i++)
                    {
                        await Html.RenderPartialAsync("_FriendCard.cshtml");
                    }
                }
            }
            @* @await Html.PartialAsync("_FriendCard.cshtml") *@
        </div>
    </div>
</div>
